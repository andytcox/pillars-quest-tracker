= simple_form_for @quest, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.error_span :name
  = f.input :person
  = f.error_span :person
  = f.input :location
  = f.error_span :location
  = f.input :notes
  = f.error_span :notes
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), quests_path, :class => 'btn btn-default'
