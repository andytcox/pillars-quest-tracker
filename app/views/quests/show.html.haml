- model_class = Quest
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @quest.name
%p
  %strong= model_class.human_attribute_name(:person) + ':'
  %br
  = @quest.person
%p
  %strong= model_class.human_attribute_name(:location) + ':'
  %br
  = @quest.location
%p
  %strong= model_class.human_attribute_name(:notes) + ':'
  %br
  = @quest.notes


= link_to t('.back', :default => t("helpers.links.back")), quests_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_quest_path(@quest), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), quest_path(@quest), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
